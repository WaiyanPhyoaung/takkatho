<style>
  @import "../styles/global.css"; /* Base styles */
  .section-subtitle {
    @apply inline-block text-emerald-600 font-bold mb-2 tracking-wider uppercase text-sm;
  }

  .scroll-reveal {
    opacity: 0;
    transform: translateY(30px);
    transition:
      opacity 0.8s ease,
      transform 0.8s ease;
  }

  .scroll-reveal.visible {
    opacity: 1;
    transform: translateY(0);
  }

  /* Hero section styles */
  .hero-section {
    background: linear-gradient(135deg, #2a5298 0%, #1e3c72 100%);
  }

  .animated-bg {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image:
      radial-gradient(
        circle at 20% 30%,
        rgba(255, 255, 255, 0.15) 0%,
        transparent 40%
      ),
      radial-gradient(
        circle at 80% 70%,
        rgba(255, 255, 255, 0.1) 0%,
        transparent 40%
      );
    animation: pulse 10s infinite alternate;
  }

  .shape-divider {
    width: 100%;
    height: 60px;
    background-color: white;
    border-radius: 50% 50% 0 0 / 100% 100% 0 0;
    transform: scaleX(1.5);
  }

  /* Mission section styles */
  .stat-box {
    @apply bg-white shadow-md rounded-lg p-4 flex flex-col items-center min-w-[100px];
  }

  .stat-number {
    @apply text-2xl font-bold text-emerald-600;
  }

  .stat-label {
    @apply text-sm text-gray-600;
  }

  .shape-1 {
    width: 200px;
    height: 200px;
    background-color: rgba(16, 185, 129, 0.1);
    border-radius: 30% 70% 70% 30% / 30% 30% 70% 70%;
    top: -30px;
    left: -40px;
    z-index: 0;
    animation: morph 8s linear infinite alternate;
  }

  .shape-2 {
    width: 160px;
    height: 160px;
    background-color: rgba(79, 70, 229, 0.1);
    border-radius: 60% 40% 30% 70% / 60% 30% 70% 40%;
    bottom: -20px;
    right: -30px;
    z-index: 0;
    animation: morph 8s linear infinite alternate-reverse;
  }

  /* Timeline styles */
  .timeline {
    @apply relative max-w-3xl mx-auto;
    padding-left: 30px;
    border-left: 2px solid #e5e7eb;
  }

  .timeline-item {
    @apply relative pb-12;
  }

  .timeline-marker {
    @apply absolute -left-[31px] w-[16px] h-[16px] bg-emerald-500 rounded-full border-4 border-white;
    box-shadow: 0 0 0 3px rgba(16, 185, 129, 0.2);
  }

  .timeline-content {
    @apply bg-white p-6 rounded-lg shadow-md;
  }

  /* Team section styles */
  .team-member {
    @apply bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow duration-300;
    transform: translateY(0);
    transition: transform 0.3s ease;
  }

  .team-member:hover {
    transform: translateY(-10px);
  }

  .member-image img {
    transition: transform 0.5s ease;
  }

  .team-member:hover .member-image img {
    transform: scale(1.05);
  }

  .social-icon {
    @apply w-8 h-8 rounded-full bg-gray-100 flex items-center justify-center text-gray-600 hover:bg-emerald-100 hover:text-emerald-600 transition-colors duration-300;
  }

  /* Support section styles */
  .support-section {
    overflow: hidden;
  }

  .support-bg {
    @apply absolute inset-0;
    background-image:
      linear-gradient(
        135deg,
        rgba(16, 185, 129, 0.05) 0%,
        rgba(79, 70, 229, 0.05) 100%
      ),
      url("data:image/svg+xml,%3Csvg width='100' height='100' viewBox='0 0 100 100' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M11 18c3.866 0 7-3.134 7-7s-3.134-7-7-7-7 3.134-7 7 3.134 7 7 7zm48 25c3.866 0 7-3.134 7-7s-3.134-7-7-7-7 3.134-7 7 3.134 7 7 7zm-43-7c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zm63 31c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zM34 90c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zm56-76c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3zM12 86c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm28-65c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm23-11c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zm-6 60c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm29 22c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zM32 63c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zm57-13c2.76 0 5-2.24 5-5s-2.24-5-5-5-5 2.24-5 5 2.24 5 5 5zm-9-21c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2zM60 91c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2zM35 41c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2zM12 60c1.105 0 2-.895 2-2s-.895-2-2-2-2 .895-2 2 .895 2 2 2z' fill='%23e5e7eb' fill-opacity='0.4' fill-rule='evenodd'/%3E%3C/svg%3E");
  }

  .support-card {
    position: relative;
    overflow: hidden;
  }

  .support-way {
    @apply flex items-center gap-3 text-gray-700;
  }

  .cta-button {
    @apply inline-flex items-center px-6 py-3 bg-emerald-600 text-white font-bold rounded-full hover:bg-emerald-700 transition-colors duration-300;
  }

  .illustration-container {
    @apply relative h-80;
  }

  .illustration-element {
    @apply absolute rounded-lg shadow-lg;
    background-color: #fff;
    animation: float 6s ease-in-out infinite;
  }

  .illustration-1 {
    width: 100px;
    height: 100px;
    top: 30px;
    left: 40px;
    background-color: rgba(16, 185, 129, 0.2);
    animation-delay: 0s;
    border-radius: 30% 70% 70% 30% / 30% 30% 70% 70%;
  }

  .illustration-2 {
    width: 80px;
    height: 80px;
    top: 120px;
    left: 120px;
    background-color: rgba(79, 70, 229, 0.2);
    animation-delay: 1s;
    border-radius: 60% 40% 30% 70% / 60% 30% 70% 40%;
  }

  .illustration-3 {
    width: 70px;
    height: 70px;
    bottom: 50px;
    left: 60px;
    background-color: rgba(245, 158, 11, 0.2);
    animation-delay: 2s;
    border-radius: 40% 60% 60% 40% / 40% 60% 40% 60%;
  }

  .illustration-4 {
    width: 90px;
    height: 90px;
    bottom: 90px;
    right: 40px;
    background-color: rgba(239, 68, 68, 0.2);
    animation-delay: 1.5s;
    border-radius: 50% 50% 30% 70% / 50% 50% 70% 30%;
  }

  /* Contact section styles */
  .contact-method {
    @apply bg-white rounded-lg shadow-md p-6 text-center hover:shadow-lg transition-shadow duration-300;
  }

  .icon-circle {
    @apply w-16 h-16 bg-emerald-100 text-emerald-600 rounded-full flex items-center justify-center mx-auto;
  }

  /* Animations */
  @keyframes pulse {
    0% {
      opacity: 0.6;
    }
    100% {
      opacity: 1;
    }
  }

  @keyframes morph {
    0% {
      border-radius: 30% 70% 70% 30% / 30% 30% 70% 70%;
    }
    25% {
      border-radius: 50% 50% 30% 70% / 50% 50% 70% 30%;
    }
    50% {
      border-radius: 70% 30% 50% 50% / 40% 60% 40% 60%;
    }
    75% {
      border-radius: 30% 70% 70% 30% / 50% 60% 40% 50%;
    }
    100% {
      border-radius: 60% 40% 30% 70% / 60% 30% 70% 40%;
    }
  }

  @keyframes float {
    0% {
      transform: translatey(0px);
    }
    50% {
      transform: translatey(-15px);
    }
    100% {
      transform: translatey(0px);
    }
  }
</style>

<script>
  // Scroll reveal animation
  document.addEventListener("DOMContentLoaded", () => {
    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            entry.target.classList.add("visible");
          }
        });
      },
      {
        threshold: 0.1,
      },
    );

    document.querySelectorAll(".scroll-reveal").forEach((element) => {
      observer.observe(element);
    });
  });
</script>
