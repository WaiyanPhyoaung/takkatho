---
interface Props {
  imgSrc: string;
  altText: string;
  width?: number;
  height?: number;
}
import { Image } from "astro:assets";
const { imgSrc, altText, width, height } = Astro.props;
---

<div class="flex justify-center p-4">
  <Image
    src={imgSrc}
    alt={altText}
    width={Number(width)}
    height={Number(height)}
  />
</div>
